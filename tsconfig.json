{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2017", "dom"],
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "dist",
    "sourceMap": false,
    "inlineSources": false,
    "rootDir": "./",
    "declaration": true,
    "incremental": false,
    "allowJs": true,
    "typeRoots": [
      "types/*"
    ]
  },
  "include": ["**/*.ts"],
}
